# --- CONFIGURAÇÕES PRINCIPAIS DA APLICAÇÃO ---
APP_NAME=Lanchonete                 # Nome da aplicação, exibido em e-mails, títulos, etc.
APP_ENV=local                       # Ambiente de execução: local, staging, production, etc.
APP_KEY=base64:wQMBOQ2D8DW76ikrR85gKygJRjUislY54jGoik57SwE=   # Chave criptográfica usada para criptografar dados e sessões.
APP_DEBUG=true                      # Exibe erros detalhados (true = modo desenvolvedor, false = produção).
APP_URL=http://localhost            # URL base da aplicação, usada em links, emails e assets.
APP_TIMEZONE=America/Sao_Paulo      # Fuso horário padrão da aplicação.
APP_LOCALE=pt_BR                    # Idioma principal da aplicação.
APP_FALLBACK_LOCALE=en              # Idioma de fallback, caso o idioma principal não exista.
APP_CURRENCY=BRL                    # Moeda padrão (útil para exibir valores monetários).
APP_LOGO_URL=/images/logo.png       # Caminho da logo da aplicação.
APP_ICO_URL=/images/ico.png         # Caminho do ícone (favicon) do site.

# --- CORES PERSONALIZADAS DO SITE ---
APP_PRIMARY_COLOR=#ff5722           # Cor principal da identidade visual (ex: botões e destaques).
APP_SECONDARY_COLOR=#4caf50         # Cor secundária (ex: botões alternativos).
APP_TERTIARY_COLOR=#03a9f4          # Cor terciária (ex: detalhes ou links).
APP_QUATERNARY_COLOR=#ffc107        # Quarta cor (ex: alertas ou avisos).
APP_QUINARY_COLOR=#9c27b0           # Quinta cor (ex: detalhes visuais extras).
APP_SENARY_COLOR=#607d8b            # Sexta cor (tons neutros).
APP_SEPTENARY_COLOR=#795548         # Sétima cor (ex: elementos de fundo escuro).

# --- CONFIGURAÇÕES DE LOG ---
LOG_CHANNEL=stack                   # Canal principal de log (padrão "stack" usa múltiplos canais).
LOG_DEPRECATIONS_CHANNEL=null       # Canal de log para avisos de funções obsoletas.
LOG_LEVEL=debug                     # Nível mínimo de log (debug, info, warning, error, etc).
LOG_FILE_PATH=                      # Caminho personalizado para salvar logs (opcional).
LOG_MAX_FILE_SIZE=1048576           # Tamanho máximo de cada arquivo de log (em bytes).
LOG_MAX_FILES=5                     # Quantidade máxima de arquivos de log mantidos.

# --- BANCO DE DADOS ---
DB_CONNECTION=mysql                 # Tipo de conexão com o banco de dados (mysql, sqlite, pgsql, sqlsrv).
DB_HOST=127.0.0.1                   # Endereço do servidor do banco de dados.
DB_PORT=3306                        # Porta padrão do MySQL.
DB_DATABASE=teste                   # Nome do banco de dados.
DB_USERNAME=root                    # Usuário para acessar o banco.
DB_PASSWORD=                        # Senha do banco (vazia no ambiente local).
DB+STRICT_MODE=true                 # Ativa modo estrito no MySQL (melhor para integridade dos dados).
DB_ENGINE=null                      # Define engine de tabela (ex: InnoDB) se necessário.
DB_TABLE_PREFIX=                    # Prefixo opcional para todas as tabelas.
DB_SOCKET=                          # Caminho para socket MySQL, se aplicável.
DB_SSL_MODE=preferred               # Define se usa SSL para conectar ao banco.
DB_SSL_CA=                           # Caminho para certificado CA SSL (opcional).
DB_SSL_CERT=                         # Caminho para certificado SSL (opcional).
DB_SSL_KEY=                          # Caminho para chave SSL (opcional).

# --- SISTEMAS INTERNOS DE CACHE, FILAS E SESSÕES ---
BROADCAST_DRIVER=log                # Mecanismo de broadcast (notificações em tempo real) — "log" apenas registra.
CACHE_DRIVER=file                   # Driver de cache — "file" usa armazenamento local.
FILESYSTEM_DISK=local               # Disco padrão para uploads (local/public/s3).
QUEUE_CONNECTION=sync               # Sistema de filas — "sync" executa de forma imediata (sem fila real).
SESSION_DRIVER=file                 # Driver de sessão — armazena sessões em arquivos.
SESSION_LIFETIME=120                # Tempo de vida da sessão (em minutos).
MEMCACHED_PERSISTENT_ID=            # ID persistente do Memcached (opcional).

# --- MEMCACHED (CACHE RÁPIDA EM MEMÓRIA) ---
MEMCACHED_HOST=127.0.0.1            # Endereço do servidor Memcached.
MEMCACHED_PORT=11211                # Porta padrão do Memcached.
MEMCACHED_USERNAME=null             # Usuário (geralmente não usado localmente).
MEMCACHED_PASSWORD=null             # Senha (geralmente não usada localmente).

# --- REDIS (CACHE E FILAS AVANÇADAS) ---
REDIS_HOST=127.0.0.1                # Endereço do servidor Redis.
REDIS_PASSWORD=null                 # Senha do Redis (geralmente desabilitada localmente).
REDIS_PORT=6379                     # Porta padrão do Redis.
REDIS_DB=0                          # Banco principal do Redis.
REDIS_CACHE_DB=1                    # Banco separado para cache Redis.

# --- CONFIGURAÇÕES DE E-MAIL ---
MAIL_MAILER=smtp                    # Protocolo de envio de e-mails (smtp, sendmail, etc).
MAIL_HOST=mailhog                   # Servidor de e-mail (Mailhog para testes locais).
MAIL_PORT=1025                      # Porta padrão do Mailhog.
MAIL_USERNAME=null                  # Usuário SMTP (não usado com Mailhog).
MAIL_PASSWORD=null                  # Senha SMTP (não usada com Mailhog).
MAIL_ENCRYPTION=null                # Tipo de criptografia (tls/ssl/null).
MAIL_FROM_ADDRESS="hello@example.com"   # Endereço padrão do remetente.
MAIL_FROM_NAME="${APP_NAME}"        # Nome exibido como remetente (usa APP_NAME).
MAIL_REPLY_TO_ADDRESS=              # Endereço padrão de resposta (opcional).
MAIL_REPLY_TO_NAME="${APP_NAME}"    # Nome exibido para resposta (opcional).
MAIL_APPROVALS_ADDRESS=             # E-mail para aprovações automáticas (opcional).
MAIL_APPROVALS_NAME="${APP_NAME} Approvals"  # Nome para aprovações.

# --- SERVIÇOS AWS (opcional, usado para uploads, storage, etc) ---
AWS_ACCESS_KEY_ID=                  # ID de acesso AWS.
AWS_SECRET_ACCESS_KEY=              # Chave secreta AWS.
AWS_DEFAULT_REGION=us-east-1        # Região padrão AWS.
AWS_BUCKET=                         # Nome do bucket S3.
AWS_USE_PATH_STYLE_ENDPOINT=false   # Define estilo de endpoint (geralmente false).
AWS+ENDPOINT=                       # Endpoint personalizado, se usar outro provedor compatível.
AWS_CLOUDFRONT_DOMAIN=              # Domínio CloudFront (CDN) para arquivos.
AWS_S3_FORCE_PATH_STYLE=false       # Força caminho completo no S3 (false = padrão).
AWS_BUCKET_URL=                     # URL pública do bucket.
AWS_BUCKET_REGION=                  # Região específica do bucket.
AWS_LANCHONETE_TABLE=               # Tabela AWS DynamoDB (se usado).
AWS_LANCHONETE_GSI1_NAME=           # Nome do índice secundário global (opcional).
AWS_LANCHONETE_GSI1_PK=             # Chave primária do índice.
AWS_LANCHONETE_GSI1_SK=             # Chave secundária do índice.

# --- PUSHER (NOTIFICAÇÕES EM TEMPO REAL / WEBSOCKETS) ---
PUSHER_APP_ID=                      # ID da aplicação Pusher.
PUSHER_APP_KEY=                     # Chave pública Pusher.
PUSHER_APP_SECRET=                  # Chave privada Pusher.
PUSHER_HOST=                        # Host Pusher (vazio = padrão).
PUSHER_PORT=443                     # Porta padrão HTTPS.
PUSHER_SCHEME=https                 # Protocolo de conexão.
PUSHER_APP_CLUSTER=mt1              # Cluster Pusher (mt1 = padrão americano).
PUSHER+LOG_CHANNEL=stack            # Canal de log das mensagens do Pusher.

# --- VARIÁVEIS USADAS PELO VITE (FRONT-END / JAVASCRIPT) ---
VITE_PUSHER_APP_ID="${PUSHER_APP_ID}"          # Repassa ID Pusher ao frontend.
PUSHER_APP_KEY="${PUSHER_APP_KEY}"             # Repassa chave pública Pusher.
PUSHER_HOST="${PUSHER_HOST}"                   # Repassa host ao frontend.
PUSHER_PORT="${PUSHER_PORT}"                   # Repassa porta.
PUSHER_SCHEME="${PUSHER_SCHEME}"               # Repassa protocolo.
PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"     # Repassa cluster.
PUSHER_LOG_CHANNEL="${PUSHER_LOG_CHANNEL}"     # Repassa canal de log.

# --- VARIÁVEIS COMPARTILHADAS ENTRE FRONT (VITE) E MIX (ANTIGO LARAVEL MIX) ---
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"        # Chave Pusher para o Vite.
VITE_PUSHER_HOST="${PUSHER_HOST}"              # Host Pusher para o Vite.
VITE_PUSHER_PORT="${PUSHER_PORT}"              # Porta Pusher para o Vite.
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"          # Protocolo Pusher.
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"# Cluster Pusher.
VITE+PUSHER_LOG_CHANNEL="${PUSHER_LOG_CHANNEL}"# Canal de log Vite.
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"         # Chave Pusher para Laravel Mix (compatibilidade antiga).
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}" # Cluster Mix.
MIX_PUSHER_APP_ID="${PUSHER_APP_ID}"           # ID Pusher Mix.
MIX_PUSHER_HOST="${PUSHER_HOST}"               # Host Mix.
MIX_PUSHER_PORT="${PUSHER_PORT}"               # Porta Mix.
MIX_PUSHER_SCHEME="${PUSHER_SCHEME}"           # Protocolo Mix.
MIX_PUSHER_LOG_CHANNEL="${PUSHER_LOG_CHANNEL}" # Canal Mix.
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"         # Repetição para compatibilidade Mix.
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}" # Repetição Mix.

# --- VARIÁVEIS GERAIS VISÍVEIS NO FRONTEND ---
VITE_APP_NAME="${APP_NAME}"                    # Nome da aplicação no frontend.
VITE_APP_ENV="${APP_ENV}"                      # Ambiente (local, produção, etc) no frontend.
VITE_APP_URL="${APP_URL}"                      # URL base no frontend.
VITE_APP_LOCALE="${APP_LOCALE}"                # Idioma no frontend.
